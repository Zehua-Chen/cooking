{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "components/*": ["components/*"],
      "layouts/*": ["layouts/*"],
      "pages/*": ["pages/*"],
      "content/*": ["content/*"]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxt/content",
      "@nuxtjs/color-mode"
    ]
  },
  "include": ["./components/**/*", "./layouts/**/*", "./pages/**/*"],
  "exclude": ["./node_modules/**/*"]
}
